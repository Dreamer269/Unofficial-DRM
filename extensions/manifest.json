{
  "manifest_version": 3,
  "name": "w1devine",
  "version": "4.10.2557.0",
  "action": {
    "default_icon": "icon.png",
    "default_title": "w1devine",
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "activeTab", "storage", "webRequest"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js", "script.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "mod.js",
        "decrypt.js",
        "index.html",
        "modules/*",
        "redhat.png"
      ],
      "matches": ["https://*/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
